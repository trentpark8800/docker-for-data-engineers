{
    "name": "spark-dev-container",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "spark-dev-container",
    "remoteUser": "spark",
    "workspaceFolder": "/opt/spark/work-dir/docker-for-data-engineers",
    "mounts": [
        {
            "source": "${localWorkspaceFolder}",
            "target": "/opt/spark/work-dir/docker-for-data-engineers",
            "type": "bind"
        }
    ],
    "customizations": {
    
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.pylint",
                "ms-python.black-formatter",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.vscode-jupyter-slideshow",
                "ms-toolsai.jupyter-hub"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.defaultInterpreterPath": "/opt/spark/work-dir/.venv/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.formatting.provider": "black",
                "jupyter.askForKernelRestart": false,
                "jupyter.kernels.trusted": ["spark-venv"],
                "jupyter.allowImportFromNotebook": true,
                "files.exclude": {
                    "**/__pycache__": true,
                    "**/*.pyc": true,
                    "**/.ipynb_checkpoints": true
                }
            }
        }
    }
}